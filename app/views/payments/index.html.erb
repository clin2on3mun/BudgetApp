<%= render 'shared/header', heading:'PAYMENTS'%>
 <%= render 'shared/notice'%>
<div>
<div class="flex items-center justify-between bg-white px-2 py-1">  
<div class="flex items-center gap-1 ">
 <p><%= raw @category.icon %>
  </p> 
<h1 class="proxima bold text-lg"><%= @category.name %></h1>
</div>
 <p class="proxima bold text-lg">$<%= @category.total_payment_amount%></p>
</div>
   <div class="mt-3 flex flex-col gap-2 mb-10">
    <% @payments.each do |payment| %>
        <div class="flex bg-white flex-col border-2 mx-2  p-3">
         <div class="flex justify-between"> 
          <h1 class="proxima bold text-lg"><%= payment.name %></h1>
          <p class="proxima bold text-lg">$<%= payment.amount %></p>
        </div>
        <p class="flex text-gray-400">
          <svg class="w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>
<%= payment.created_at.day%>-<%=payment.created_at.strftime("%b")%>-<%=payment.created_at.year%></p>
      </div>
    <% end %>
   </div> 
  
<div class="bg-create-button flex justify-center p-3 absolute bottom-0 w-full"><%= link_to 'Add New Payment', new_category_payment_path(@category), class: "border-2 border-white w-full text-center p-5 text-white"%></div>

