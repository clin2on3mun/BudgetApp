<%= render 'shared/header', heading:'LOGIN'%>
 <div class="w-full flex flex-col justify-center gap-2  px-5 h-96">
  <%= form_for(resource, as: resource_name, class: "w-96", url: session_path(resource_name)) do |f| %>
    <div class="field mt-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-md" , placeholder: "Enter your Email"%>
    </div>

    <div class="field mt-2">
      <%= f.password_field :password, autocomplete: "current-password", class: " w-full rounded-md", placeholder:"Enter password"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mt-2">
      <%= f.submit "Log in" , class: "bg-create-button text-white rounded-md  px-4 py-2  cursor-pointer hover:bg-green-500"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>


