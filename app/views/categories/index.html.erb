<%= render 'shared/header', heading:'TRANSANCTION'%>
 <%= render 'shared/notice'%>
<div>
  <div class="flex items-center justify-between bg-white px-3 py-5">  
    <p class="proxima bold text-lg">Gift credit</p> 
    <p class="proxima bold text-lg">$0.0</p>
  </div>
    <div class="mt-3  flex mx-auto flex-col gap-5 px-2 py-1 mb-10">
    <% @categories.each do |category|%>
     <%= link_to category_payments_path(category),class:"block" do %>
     <div class="flex w-full gap-2 bg-white p-3">
      <p class="icon"><%= raw category.icon %></i></p>   
      <div class="w-full ">
      <div class="flex justify-between">  
      <p class="proxima bold text-lg"><%= category.name%>
      <p class="proxima bold text-lg">$<%= category.total_payment_amount %></p>
      </div>
      <p class="flex text-gray-400">
          <svg class="w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>
<%= category.created_at.day%>-<%=category.created_at.strftime("%b")%>-<%=category.created_at.year%></p>
      </div>
      </div>
     <%end%>
    <%end%>  
    </div>
</div>
<div class="bg-create-button flex justify-center p-3"> <%= link_to 'Add New Transaction', '/categories/new',class: "border-2 border-white w-full text-center p-5 text-white"%></div>