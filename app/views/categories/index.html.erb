<h1>categories</h1>
<div>
    <%= link_to 'Add a category', '/categories/new'%>
    <% @categories.each do |category|%>
      <p><%= link_to category.name, category_payments_path(category) %></p>
      <p><%= raw category.icon %></i></p>
      <p>Total Amount: <%= category.total_payment_amount %></p>
    <%end%>  
</div>